FROM python:3.13-slim

WORKDIR /app

# Install PostgreSQL client libraries required by psycopg
RUN apt-get update && \
    apt-get install -y --no-install-recommends libpq5 libpq-dev && \
    rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir uv

COPY pyproject.toml uv.lock ./
RUN uv sync --frozen

COPY scripts/ ./scripts/
COPY scripts/kafka/consumer.py ./consumer.py

# Use internal network for Docker Compose
ENV KAFKA_BOOTSTRAP_SERVERS=kafka:9092

CMD ["uv", "run", "consumer.py"]
